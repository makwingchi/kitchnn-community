<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h2 style="text-align:center">
			Edit <%= recipe.name %>
		</h2>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/recipes/<%= recipe._id %>/?_method=PUT" method="POST">
				<div class="form-group">
				<input class="form-control" type="text" value="<%= recipe.name %>" name="recipe[name]">
				</div>
				<div class="form-group">
				<input class="form-control" type="number" value="<%= recipe.time %>" name="recipe[time]" min="0.1" step="0.1">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%= recipe.image %>" name="recipe[image]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%= recipe.description %>" name="recipe[description]">
				</div>
				<div class="form-group">
					<button class="btn btn-md btn-primary btn-lock">
						Submit!
					</button>
				</div>
			</form>
			<a href="/recipes">Go Back</a>
		</div>	
	</div>
</div>


<% include ../partials/footer %>