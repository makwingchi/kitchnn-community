<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h2 style="text-align:center">
			Add New Comment to <%= recipe.name %>
		</h2>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/recipes/<%= recipe._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="text" name="comment[text]">
				</div>
				<div class="form-group">
					<button class="btn btn-md btn-primary btn-lock">
						Submit!
					</button>
				</div>
			</form>
			<a href="/recipes">Go Back</a>
		</div>	
	</div>
</div>


<% include ../partials/footer %>