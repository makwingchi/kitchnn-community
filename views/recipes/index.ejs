<% include ../partials/header %> 

     <div class="jumbotron jumbotron-fluid">
         <div class="container">
             <h1><span class="glyphicon glyphicon-cutlery"></span> Welcome to Kitchnn!</h1>
             <p id="branding">View these awesome recipes posted by our users from all over the world</p>
             <p>
                <a class="btn btn-info btn-lg" href="/recipes/new">Add New Recipe</a>
             </p>
         </div>
        </div>
     
    <div class="container">
        <div class="row text-center flex-wrap" id="recipe-grid">
            <% recipes.forEach(function(recipe){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                       <img src="<%= recipe.image %>">
                       <div class="caption">
                           <h4><%= recipe.name %></h4>
                       </div>
                       <p>
                           <a href="/recipes/<%= recipe._id %>" class="btn btn-primary">More Info</a>
                       </p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
     

<% include ../partials/footer %>
